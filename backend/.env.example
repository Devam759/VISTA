# Server Configuration
PORT=5000

# Database Configuration (MySQL)
# For local: mysql://root:password@localhost:3306/vista
# For production: Use your hosted MySQL connection string (e.g., from PlanetScale, Railway, etc.)
DATABASE_URL="mysql://root:111@localhost:3306/vista"

# Alternative: Individual DB credentials (if not using DATABASE_URL)
DB_HOST=localhost
DB_USER=root
DB_PASS=111
DB_NAME=vista

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=somethingsecure_change_this_in_production

# Face Recognition API (if using external service)
FACE_API=http://localhost:8000/verify-face

# Frontend URL (for CORS)
# For local: http://localhost:5173
# For production: Your Vercel deployment URL (e.g., https://your-app.vercel.app)
FRONTEND_URL=http://localhost:5173

# Auto-seed database on startup (set to 'true' for first deployment on Render)
AUTO_SEED=false
